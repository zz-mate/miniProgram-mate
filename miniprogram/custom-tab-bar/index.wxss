.tab-bar {
	/* skyline下适配 */
	position: absolute; 
	pointer-events: auto;
	bottom: 0;
	left: 0;
	right: 0;

	/* 毛玻璃 */
	background: rgba(255, 255, 255, 1);
	backdrop-filter: blur(6px);
	display: flex;
	flex-direction: row;
	/* padding-bottom: env(safe-area-inset-bottom); */
	/* padding-bottom: 16rpx;（没有安全区域的手机） */
	/* padding-bottom: constant(safe-area-inset-bottom);（兼容有安全区域的手机） */
	padding-bottom: env(safe-area-inset-bottom);
	
	z-index: 1;
}

.tab-bar-border {
  /* background-color: #808080; */
  box-shadow: rgba(126, 131, 136, 0.2) 0px 8px 24px;
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 1px;
	transform: scaleY(0.5);
}

.tab-bar-item {
	flex: 1;
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	position: relative;
	font-weight: 550;
	font-size: 24rpx;
}

.tab-bar-item image {
	height: 70rpx;
	/* width: 54rpx; */
}

.tab-bar-item view {
	position: relative;
}

@keyframes rubberBand {
	from {
		transform: scale3d(1, 1, 1);
	}

	30% {
		transform: scale3d(1.25, 0.75, 1);
	}

	40% {
		transform: scale3d(0.75, 1.25, 1);
	}

	50% {
		transform: scale3d(1.15, 0.85, 1);
	}

	65% {
		transform: scale3d(0.95, 1.05, 1);
	}

	75% {
		transform: scale3d(1.05, 0.95, 1);
	}

	to {
		transform: scale3d(1, 1, 1);
	}
}


.tab-bar-item .activeImg,
.tab-bar-item .activeTxt {
	/* animation: 1s rubberBand; */
}

.tab-bar-item .tab-bar-item-badge {
	position: absolute;
	top: 0;
	right: 50%;
	transform: translate(113%, -13%);
	background: red;
	height: 28rpx;
	line-height: 28rpx;
	width: 28rpx;
	border-radius: 50%;
	text-align: center;
	color: #ffffff;
	font-size: 20rpx;
	font-weight: normal;
}