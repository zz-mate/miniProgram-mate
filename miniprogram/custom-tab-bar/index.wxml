
<view class="tab-bar" style="height: {{height}};" wx:if="{{isShow}}">
  <view class="tab-bar-border"></view>
  <view wx:for="{{list}}" wx:key="index" class="tab-bar-item"  data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <image src="{{selected === index ? item.selectedIconPath : item.iconPath}}" class="{{selected == index ? 'activeImg' : ''}}" mode="heightFix"></image>
    <view style="color: {{selected === index ? selectedColor : color}}" class="{{selected == index ? 'activeImg' : ''}}">{{item.text}}</view>
	<view wx:if="{{item.badge}}"  class="tab-bar-item-badge">{{item.badge}}</view>
  </view>
</view>