		<view class="login_push ">
			<label class="flex" style="align-items: center;" bind:tap="handlePrivacy">
				<icon wx:if="{{privacy}}" class="icon-small" type="success" color="#FFD608" size="16"></icon>
				<icon wx:else class="icon-small" type="circle" size="16"></icon>

				<view class="login_push_placeholder">我已经阅读与同意 <text class="privacy"
						catch:tap="handlePrivacyOpen">《隐私保护指引》</text></view>
			</label>
		</view>

		<view class="login_btn radius-10 {{!privacy||phone.length!==11?'login_btn_d':''}} " hover-class="btn-yellow-hover"
			hover-stay-time='10' bind:tap="handleLogin">登录
		</view>

		<view class="login_wx_btn radius-10 " hover-class="btn-hover" hover-stay-time='10' bind:tap="handlePopup">微信快捷登录
		</view>
		
</view>

</view>


<z-popup bind:popup="handlePopup" bind:closeOnClickOverlay="handleCloseOverlay" show="{{show}}"
	closeOnClickOverlay="{{false}}" mode="{{'bottom'}}">

	<view class="popup-content">
		<view class="login-popup">
			<button class="login-btn " wx:if="{{!hasUserInfo}}" open-type="getUserProfile" bindtap="getUserProfile" type="primary">
			授权登录
		</button>
		</view>
	</view>
</z-popup>