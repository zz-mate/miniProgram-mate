<scroll-view type="custom" scroll-y style="height:calc(100% - {{height}}px) ">
  <!-- 备忘录内容 -->
  <sticky-section push-pinned-header="{{false}}" padding="{{[10,14,20,14]}}">
    <block wx:if="{{bookList.length>0}}">


      <block wx:for="{{bookList}}"  wx:key="index" >

        <view class="book-list {{index==bookIndex?'book-list_active':''}}" style="width: 100%;height: 100rpx;" data-index="{{index}}"  bind:tap="handleMenoSelected" >
          <view class="book-item flex flex-align-items-center flex-space-between">
            <view class="cover">
              <image src="{{item.icon}}" mode="aspectFill" />
            </view>
            <view class="info">
              <view class="book-name">{{item.book_name}}</view>
              <view class="num">1人</view>
            </view>
            <view class="icon" wx:if="{{item.is_default==1}}">
            <image src="https://env-00jxubueh4pn.normal.cloudstatic.cn/选中.png?expire_at=1764261862&er_sign=70a70d791e41e1880e6ea64c4c61fd8b" mode="widthFix"/>
            </view>
          </view>
        </view>
