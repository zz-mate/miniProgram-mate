            <image wx:if="{{index==memoContentsIndex}}" class="memo_contents_pushpin" src="../../../static/componentImg/pushpin.png" data-selected="{{item.value}}" data-sub="{{index}}" data-title="{{item.book_name}}" bind:tap="handleMenoSelected" />

