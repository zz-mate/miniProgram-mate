<view
  class="load-more wr-class"
  style="{{listIsEmpty && (status === 0 || status === 2) ? 'display: none' : '' }}"

>
<!-- bindtap="tapHandle" -->
  <!-- 加载中 -->

  <!-- <t-loading
    t-class="t-class-loading"
    t-class-text="t-class-loading-text"
    t-class-indicator="t-class-indicator"
    loading="{{status === 1}}"
    text="加载中..."
    theme="circular"
    size="40rpx"
  /> -->
  <!-- <view  style="height:100%">  -->
  <view wx:if="{{status === 1}}" class="load-more_loading">
  <image src="../../static/componentImg/loading.png" class="loading" style=" width: 40rpx;height: 40rpx;" mode=""/>
  {{loadingText}}
</view> 

  <!-- 已全部加载 -->
  <z-divider wx:if="{{status === 2}}" text="{{noMoreText}}">
   
  </z-divider>

  <!-- 加载失败 -->
  <view class="load-more__error" wx:if="{{status===3}}" bind:tap="tapHandle">
    {{failedText}}<text class="load-more__refresh-btn" >刷新</text>
  </view>
</view>

<!-- 支持通过slot传入页面/列表的空态，load-more来控制空态的显示状态 -->
<slot wx:if="{{listIsEmpty && (status === 0 || status === 2)}}" name="empty" />
