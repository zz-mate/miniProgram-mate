  <view class='date-picker'>
    <picker-view indicator-style="height: 40px;" style="width: 100%; height: 240px;background-color:white;font-size: 24rpx;padding-top: 30rpx;" value="{{value}}" bindchange="bindChange" immediate-change="{{true}}" bindpickstart="bindpickstart" bindpickend="bindpickend">
      <picker-view-column wx:if="{{isShowYear}}">
        <view wx:for="{{years}}" wx:key="*this" class='item' style="line-height: 40px">
          <text>{{item}}年 
          </text>
        </view>
      </picker-view-column>
      <picker-view-column wx:if="{{isShowMonth}}">
        <view wx:for="{{months}}" wx:key="*this" class='item' style="line-height: 40px">
          <text>{{item}}月
          </text>
        </view>
      </picker-view-column>
      <picker-view-column wx:if="{{isShowDay}}">
        <view wx:for="{{days}}" wx:key="*this" class='item' style="line-height: 40px">
          <text>{{item}}日
          </text>
        </view>
      </picker-view-column>
      <picker-view-column wx:if="{{isShowHour}}">
        <view wx:for="{{hours}}" wx:key="*this" class='item' style="line-height: 40px">
          <text>{{item}}时
          </text>
        </view>
      </picker-view-column>
      <picker-view-column wx:if="{{isShoMinutes}}">
        <view wx:for="{{minutes}}" wx:key="*this" class='item' style="line-height: 40px">
          <text>{{item}}分
          </text>
        </view>
      </picker-view-column>
      <picker-view-column wx:if="{{isShowSeconds}}">
        <view wx:for="{{seconds}}" wx:key="*this" class='item' style="line-height: 40px">
          <text>{{item}}秒 </text>
        </view>
      </picker-view-column>
    </picker-view>
