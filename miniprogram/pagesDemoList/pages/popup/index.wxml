<navigation-bar title="popup" back="{{false}}" homeButton="{{false}}" color="black" background="#FFF"></navigation-bar>
<view style="display: flex;">
<button size="mini" type="primary" style="width: 90px;" data-mode="left" bind:tap="handlePopupMode">left</button>
<button size="mini" type="primary" style="width: 90px;" data-mode="top" bind:tap="handlePopupMode">top</button>
<button size="mini" type="primary" style="width: 90px;" data-mode="right" bind:tap="handlePopupMode">right</button>
<button size="mini" type="primary" style="width: 90px;" data-mode="bottom" bind:tap="handlePopupMode">bottom</button>
<button size="mini" type="primary" style="width: 90px;" data-mode="center" bind:tap="handlePopupMode">center</button>

</view>
<button style="margin-top: 40px;" bind:tap="handlePopup">open</button>

<z-popup bind:popup="handlePopup" bind:closeOnClickOverlay="handleCloseOverlay" show="{{show}}" closeOnClickOverlay="{{true}}" mode="{{mode}}">

<view style="width:200px;height: 200px;background-color: rebeccapurple;padding: 80px 0;">

<image src="../../../static/componentImg/bg.png" mode="" style="width: 100%;height:100%;"/>
</view>
</z-popup>